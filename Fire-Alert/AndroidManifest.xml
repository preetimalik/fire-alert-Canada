<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixelbyte.firealert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pixelbyte.firealert.MainScreenActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixelbyte.firealert.MainScreenActivity" />

            <intent-filter>
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.CompanyFormsActivity"
            android:label="@string/title_activity_company_forms"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixelbyte.firealert.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.LoginScreenActivity"
            android:label="@string/title_activity_login_screen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.ScanEquipmentActivity"
            android:label="@string/title_activity_scan_equipment"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixelbyte.firealert.CompanyFormsActivity" />
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.SaveResultsActivity"
            android:label="@string/title_activity_save_results"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pixelbyte.firealert.ScanEquipmentActivity" />
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.ScannerActivity"
            android:label="@string/title_activity_scanner"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.CheckEquipmentActivity"
            android:label="@string/title_activity_check_equipment"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.pixelbyte.firealert.EnterManuallyActivity"
            android:label="@string/title_activity_enter_manually"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>
