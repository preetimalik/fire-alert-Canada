<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainScreenActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
    	<TextView
        	android:layout_width="0dp"
        	android:layout_height="40dp"
        	android:layout_weight="0.8"
        	android:background="#FF2F05"
        	android:paddingLeft="20dp"
        	android:gravity="left|center_vertical"
        	android:textColor="@android:color/primary_text_dark"
        	android:textSize="25sp"
        	android:text="Fire-Alert Mobile" />
    	
    	<ImageButton
    	    android:id="@+id/mainScreenSettingsButton"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:background="#FF2F05"
    	    android:src="@android:drawable/ic_menu_manage" />"
            
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_launcher" />
    
    <Button
        android:id="@+id/mainScreenBeginInspectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/redroundbutton"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20sp"
        android:text="Begin Inspection" />
    
    <Button
        android:id="@+id/mainScreenUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/bluecirclebutton"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20sp"
        android:text="Upload" />"
    
</LinearLayout>
